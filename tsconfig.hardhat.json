{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "declaration": true,
    "declarationMap": true,
    "noImplicitAny": false,
    "sourceMap": true,
    "strict": true,
    "rootDirs": [
      "./src",
      "./scripts",
      "./test"
    ],
    "esModuleInterop": true,
    "baseUrl": "./src",
    "resolveJsonModule": true
  },
  "exclude": [
    "dist",
    "node_modules"
  ],
  "include": [
    "./scripts",
    "./test",
    "./src"
  ],
  "files": [
    "./hardhat.config.ts"
  ]
}